{{ drupal_variable_delete('home.nodeIgnore') }}
{% include '@saojoao2018/includes/header.html.twig' %}
<div class="container">
    <!-- Começa a propaganda fixa centralizada -->
    <div class="banner-topo">
        {{ drupal_region('banner970x90') }}
    </div>
    <!-- Começa a propaganda fixa lateral -->
    <div class="skyscraper hidden-xs hidden-sm hidden-md">
        <div class="posicao">
            {{ drupal_region('bannerSkyscraper') }}
        </div>
    </div>


    <!-- Começa o slider -->
    {{ drupal_view('frontpage', 'block_slide') }}
    <!-- Começa a notícia horizontal -->
    {{ drupal_view('frontpage', 'block_1_noticia_sem_imagem', drupal_variable_get('home.nodeIgnore')) }}

    <!-- Começa Section de Destaques -->
    <section id="noticias-destaques" class="col-md-12">
        <div class="titulo">
            <h1>Últimas Notícias</h1>
        </div>
        <div class="noticias-2-2 col-md-12">
            {{ drupal_view('frontpage', 'block_4_noticias_promovidas', drupal_variable_get('home.nodeIgnore')) }}
            <div class="col-md-4 no-padding-mobile">
                {{ drupal_region('banner300x600') }}
            </div>
        </div>
        <div class="noticias-1-2 col-md-12">
            {{ drupal_view('frontpage', 'block_2_noticias_promovidas', drupal_variable_get('home.nodeIgnore')) }}
        </div>
        <div class="noticias-1-3 col-md-12">
            {{ drupal_view('frontpage', 'block_3_noticias_promovidas', drupal_variable_get('home.nodeIgnore')) }}
        </div>
        <div class="noticias-1-1 col-md-12">
            <div class="col-md-8 no-padding">
                {{ drupal_view('frontpage', 'block_1_noticia_promovida', drupal_variable_get('home.nodeIgnore')) }}
            </div>
            <div class="col-md-4 no-padding-mobile">
                {{ drupal_region('banner300x250') }}
            </div>
        </div>
        <div class="noticias-1-4 col-md-12">
            {{ drupal_view('frontpage', 'block_4_noticias_publicadas', drupal_variable_get('home.nodeIgnore')) }}
        </div>
        <div class="noticias-2-3 col-md-12">
            <div class="col-md-12 no-padding">
                {{ drupal_view('frontpage', 'block_5_noticias_publi_s_imagem', drupal_variable_get('home.nodeIgnore'))}}
                <div class="col-md-4 no-padding">
                    {{ drupal_region('banner300x100') }}
                </div>
            </div>
        </div>
    </section>
                
    <!-- Começa a agenda de eventos -->
    <section id="agenda-eventos" class="col-md-12">
        <div class="titulo">
            <h1>Agenda de Eventos</h1>
        </div>
        <iframe class="iframe-agenda" src="https://agenda.leiaja.com/?response_type=embed&amp;tema=saojoao&amp;tipo=saojoao&amp;formato=horizontal"></iframe>
    </section>
    <!-- Começa Multimidia LeiaJa -->
    <section id="multimidia-leiaja" class="col-md-12">
        <div class="titulo">
            <h1>Multimídia LeiaJá</h1>
        </div>
        <div class="col-md-12 no-padding tab-multimidia">
            <ul class="nav nav-pills nav-justified">
                <li class="active"><a data-toggle="tab" href="#fotos">Fotos</a></li>
                <li><a data-toggle="tab" href="#videos">Vídeos</a></li>
                <li><a data-toggle="tab" href="#podcasts">Podcasts</a></li>
            </ul>
            <div class="tab-content">
                <div id="fotos" class="tab-pane fade in active">
                    <div class="noticias-2-2 col-md-12">
                        <div class="col-md-12 no-padding">
                            {{ drupal_view('multimidia', 'block_mult_imagens') }}
                        </div>
                    </div>
                </div>
                <div id="videos" class="tab-pane fade">
                    <div class="noticias-2-2 col-md-12">
                        <div class="col-md-12 no-padding">
                            {{ drupal_view('multimidia', 'block_mult_videos') }}
                        </div>
                    </div>
                </div>
                <div id="podcasts" class="tab-pane fade">
                    <div class="noticias-2-2 col-md-12">
                        <div class="col-md-12 no-padding">
                            {{ drupal_view('multimidia', 'block_mult_podcasts') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% include '@saojoao2018/includes/footer.html.twig' %}